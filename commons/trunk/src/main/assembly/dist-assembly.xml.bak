<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- license files and release notes -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>license.txt</include>
                <include>gpl.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>releasenotes*.txt</include>
            </includes>
        </fileSet>
        <!-- doc -->
        <fileSet>
            <directory>target/site/apidocs</directory>
            <outputDirectory>doc/api</outputDirectory>
        </fileSet>
        <!-- main -->
        <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <!-- test -->
        <fileSet>
            <directory>src/test/java</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>test</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>junit:junit</exclude>
                <exclude>databene:databene-commons</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>databene:databene-commons:jar</include>
                <include>databene:databene-commons:sources</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>